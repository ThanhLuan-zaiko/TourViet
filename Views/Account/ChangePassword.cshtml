@model TourViet.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4 fw-bold">Đổi mật khẩu</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show p-3 mb-3" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }


                    <form asp-action="ChangePassword" asp-controller="Account" method="post" id="changePasswordForm" class="needs-validation" novalidate onsubmit="return validateChangePasswordForm(event)">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger p-3 mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <input asp-for="CurrentPassword" type="password" class="form-control form-control-lg password-input" placeholder="Nhập mật khẩu hiện tại" id="CurrentPassword" />
                                <button class="btn btn-outline-secondary" type="button" id="toggleCurrentPassword" aria-label="Hiển thị mật khẩu">
                                    <i class="bi bi-eye" id="currentPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <input asp-for="NewPassword" type="password" class="form-control form-control-lg password-input" placeholder="Nhập mật khẩu mới" id="NewPassword" />
                                <button class="btn btn-outline-secondary" type="button" id="toggleNewPassword" aria-label="Hiển thị mật khẩu">
                                    <i class="bi bi-eye" id="newPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmNewPassword" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <input asp-for="ConfirmNewPassword" type="password" class="form-control form-control-lg password-input" placeholder="Nhập lại mật khẩu mới" id="ConfirmNewPassword" />
                                <button class="btn btn-outline-secondary" type="button" id="toggleConfirmNewPassword" aria-label="Hiển thị mật khẩu">
                                    <i class="bi bi-eye" id="confirmNewPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-semibold" id="submitBtn">
                                <span class="spinner-border spinner-border-sm d-none" id="loadingSpinner" role="status" aria-hidden="true"></span>
                                <span id="submitText"><i class="bi bi-key me-2"></i>Đổi mật khẩu</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Validation function for change password form
        function validateChangePasswordForm(event) {
            const form = document.getElementById('changePasswordForm');
            const submitBtn = document.getElementById('submitBtn');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const submitText = document.getElementById('submitText');
            
            // Add validation class to show validation messages
            form.classList.add('was-validated');
            
            // Check if form is valid
            if (!form.checkValidity()) {
                // Prevent form submission if invalid
                event.preventDefault();
                event.stopPropagation();
                
                // Make sure loading state is not shown
                submitBtn.disabled = false;
                loadingSpinner.classList.add('d-none');
                submitText.innerHTML = '<i class="bi bi-key me-2"></i>Đổi mật khẩu';
                
                return false;
            }
            
            // Only proceed with loading state if form is valid and button is not disabled
            if (!submitBtn.disabled) {
                submitBtn.disabled = true;
                loadingSpinner.classList.remove('d-none');
                submitText.innerHTML = 'Đang xử lý...';
            } else {
                // If button is already disabled, prevent duplicate submission
                event.preventDefault();
                return false;
            }
            
            return true;
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Toggle password visibility functions
            function setupPasswordToggle(toggleBtnId, inputId, iconId) {
                const toggleBtn = document.getElementById(toggleBtnId);
                const input = document.getElementById(inputId);
                const icon = document.getElementById(iconId);
                
                if (toggleBtn && input && icon) {
                    toggleBtn.addEventListener('click', function() {
                        const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                        input.setAttribute('type', type);
                        icon.classList.toggle('bi-eye');
                        icon.classList.toggle('bi-eye-slash');
                    });
                }
            }

            // Setup all password toggles
            setupPasswordToggle('toggleCurrentPassword', 'CurrentPassword', 'currentPasswordIcon');
            setupPasswordToggle('toggleNewPassword', 'NewPassword', 'newPasswordIcon');
            setupPasswordToggle('toggleConfirmNewPassword', 'ConfirmNewPassword', 'confirmNewPasswordIcon');

            // Add real-time validation to disable submit button when form is invalid
            const changePasswordForm = document.getElementById('changePasswordForm');
            const submitBtn = document.getElementById('submitBtn');
            
            // Function to check form validity and update button state
            function updateSubmitButtonState() {
                if (changePasswordForm.checkValidity()) {
                    submitBtn.disabled = false;
                } else {
                    submitBtn.disabled = true;
                    // Ensure loading state is not shown when form is invalid
                    const loadingSpinner = document.getElementById('loadingSpinner');
                    const submitText = document.getElementById('submitText');
                    loadingSpinner.classList.add('d-none');
                    submitText.innerHTML = '<i class="bi bi-key me-2"></i>Đổi mật khẩu';
                }
            }
            
            // Add event listeners to all form inputs to check validity in real-time
            const inputs = changePasswordForm.querySelectorAll('input, select, textarea');
            inputs.forEach(input => {
                input.addEventListener('input', updateSubmitButtonState);
                input.addEventListener('blur', updateSubmitButtonState);
            });
            
            // Initialize button state
            updateSubmitButtonState();
        });
    </script>
}
