@model IEnumerable<TourViet.Models.Tour>
@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Khám Phá Việt Nam</h1>
        <p class="lead text-muted">Những chuyến đi tuyệt vời đang chờ đón bạn</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var tour in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-shadow transition-all">
                        <div class="position-relative overflow-hidden" style="height: 200px;">
                            @if (tour.TourImages != null && tour.TourImages.Any())
                            {
                                var mainImage = tour.TourImages.OrderBy(i => i.SortOrder).FirstOrDefault();
                                <img src="@(mainImage?.Url ?? "/images/default-tour.jpg")" 
                                     class="card-img-top w-100 h-100 object-fit-cover" 
                                     alt="@tour.TourName">
                            }
                            else
                            {
                                <div class="w-100 h-100 bg-secondary d-flex align-items-center justify-content-center text-white">
                                    <i class="bi bi-image fs-1"></i>
                                </div>
                            }
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-primary rounded-pill">
                                    @tour.Category?.CategoryName
                                </span>
                            </div>
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <div class="mb-2 text-muted small">
                                <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                @(tour.Location?.LocationName ?? "Đang cập nhật")
                            </div>
                            
                            <h5 class="card-title fw-bold mb-3">
                                <a href="#" class="text-decoration-none text-dark stretched-link">
                                    @tour.TourName
                                </a>
                            </h5>
                            
                            <p class="card-text text-muted small flex-grow-1 line-clamp-3">
                                @tour.ShortDescription
                            </p>
                            
                            <div class="mt-3 pt-3 border-top d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-muted small d-block">Giá từ</span>
                                    <span class="fw-bold text-primary fs-5">
                                        @if (tour.TourPrices != null && tour.TourPrices.Any())
                                        {
                                            var minPrice = tour.TourPrices.Min(p => p.Amount);
                                            @minPrice.ToString("N0") <small>VND</small>
                                        }
                                        else
                                        {
                                            <span>Liên hệ</span>
                                        }
                                    </span>
                                </div>
                                <button class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                    Chi tiết
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-search fs-1 text-muted"></i>
            </div>
            <h3 class="text-muted">Chưa có tour nào được đăng</h3>
            <p>Vui lòng quay lại sau nhé!</p>
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .transition-all {
        transition: all 0.3s ease;
    }
    .object-fit-cover {
        object-fit: cover;
    }
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
