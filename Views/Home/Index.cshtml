@model IEnumerable<TourViet.Models.Tour>
@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="tour-container">
            <partial name="_TourListPartial" model="Model" />
        </div>
        
        <!-- Loading Spinner -->
        <div id="loading-spinner" class="text-center py-4 d-none">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Đang tải...</span>
            </div>
        </div>

        <!-- End of List Message -->
        <div id="end-of-list" class="text-center py-4 d-none">
            <p class="text-muted">Đã hiển thị hết danh sách tour.</p>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-search fs-1 text-muted"></i>
            </div>
            <h3 class="text-muted">Chưa có tour nào được đăng</h3>
            <p>Vui lòng quay lại sau nhé!</p>
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .transition-all {
        transition: all 0.3s ease;
    }
    .object-fit-cover {
        object-fit: cover;
    }
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        let page = 1;
        const pageSize = 6;
        let isLoading = false;
        let hasMore = true;
        
        const container = document.getElementById('tour-container');
        const loadingSpinner = document.getElementById('loading-spinner');
        const endOfList = document.getElementById('end-of-list');

        if (!container) return;

        const loadMoreTours = async () => {
            if (isLoading || !hasMore) return;
            
            isLoading = true;
            loadingSpinner.classList.remove('d-none');

            try {
                page++;
                const response = await fetch(`/Home/GetToursPartial?page=${page}&pageSize=${pageSize}`);
                
                if (response.status === 204) { // No Content
                    hasMore = false;
                    endOfList.classList.remove('d-none');
                } else if (response.ok) {
                    const html = await response.text();
                    // Append new content
                    container.insertAdjacentHTML('beforeend', html);
                } else {
                    console.error('Failed to load tours');
                }
            } catch (error) {
                console.error('Error loading tours:', error);
            } finally {
                isLoading = false;
                loadingSpinner.classList.add('d-none');
            }
        };

        // Intersection Observer to detect when user scrolls to bottom
        const observer = new IntersectionObserver((entries) => {
            if (entries[0].isIntersecting && hasMore && !isLoading) {
                loadMoreTours();
            }
        }, {
            root: null,
            rootMargin: '100px', // Load 100px before reaching bottom
            threshold: 0.1
        });

        // Observe the loading spinner (which is at the bottom)
        observer.observe(loadingSpinner);
    });
</script>

<!-- Toast Container for Notifications -->
<div id="tour-toast-container" class="position-fixed top-0 end-0 p-3" style="z-index: 9999"></div>

<style>
    .tour-toast {
        min-width: 300px;
        animation: slideInRight 0.3s ease-out;
    }
    
    @@keyframes slideInRight {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
    
    .tour-toast-clickable {
        cursor: pointer;
        transition: transform 0.2s;
    }
    
    .tour-toast-clickable:hover {
        transform: scale(1.02);
    }
</style>

<script src="~/js/tour-signalr.js"></script>
<script>
    (function() {
        // Toast notification helper
        function showToast(message, type = 'info', onClick = null) {
            const toastContainer = document.getElementById('tour-toast-container');
            const toastId = 'toast-' + Date.now();
            
            const iconMap = {
                'info': 'bi-info-circle-fill',
                'success': 'bi-check-circle-fill',
                'warning': 'bi-exclamation-triangle-fill',
                'danger': 'bi-x-circle-fill'
            };
            
            const bgMap = {
                'info': 'bg-primary',
                'success': 'bg-success',
                'warning': 'bg-warning',
                'danger': 'bg-danger'
            };
            
            const toastHtml = `
                <div id="${toastId}" class="toast tour-toast ${onClick ? 'tour-toast-clickable' : ''}" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header ${bgMap[type]} text-white">
                        <i class="bi ${iconMap[type]} me-2"></i>
                        <strong class="me-auto">Tour Cập Nhật</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body bg-white">
                        ${message}
                        ${onClick ? '<div class="mt-2"><small class="text-muted">Click để xem</small></div>' : ''}
                    </div>
                </div>
            `;
            
            toastContainer.insertAdjacentHTML('beforeend', toastHtml);
            
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement, { delay: 5000 });
            
            if (onClick) {
                toastElement.addEventListener('click', onClick);
            }
            
            toast.show();
            
            // Remove from DOM after hidden
            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        }
        
        // Remove tour card from UI
        function removeTourCard(tourId) {
            const tourCard = document.querySelector(`[data-tour-id="${tourId}"]`);
            if (tourCard) {
                tourCard.closest('.col').style.transition = 'opacity 0.3s';
                tourCard.closest('.col').style.opacity = '0';
                
                setTimeout(() => {
                    tourCard.closest('.col').remove();
                    console.log(`Removed tour card: ${tourId}`);
                }, 300);
            }
        }
        
        // Initialize SignalR connection
        TourSignalR.connect('all');
        
        // Handle new tour published
        TourSignalR.onTourPublished(function(tour) {
            showToast(
                `<strong>${tour.tourName}</strong> đã được thêm mới!`,
                'success',
                () => location.reload()
            );
        });
        
        // Handle tour updated
        TourSignalR.onTourUpdated(function(tour) {
            showToast(
                `<strong>${tour.tourName}</strong> đã được cập nhật!`,
                'info',
                () => location.reload()
            );
        });
        
        // Handle tour deleted
        TourSignalR.onTourDeleted(function(tourId) {
            removeTourCard(tourId);
            showToast('Một tour đã bị xóa khỏi danh sách', 'warning');
        });
        
        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            TourSignalR.disconnect();
        });
    })();
</script>
