@model IEnumerable<TourViet.ViewModels.CustomerListViewModel>

@{
    ViewData["Title"] = "Danh Sách Khách Hàng";
    Layout = "_Layout";
    
    var totalCustomers = ViewBag.TotalCustomers ?? 0;
    var customersThisMonth = ViewBag.CustomersThisMonth ?? 0;
    var totalBookings = ViewBag.TotalBookings ?? 0;
    var totalRevenue = ViewBag.TotalRevenue ?? 0m;
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-1 text-gray-800">
                <i class="bi bi-people text-primary me-2"></i>Danh Sách Khách Hàng
            </h1>
            <p class="text-muted mb-0">
                <small>Quản lý thông tin và lịch sử của khách hàng</small>
            </p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng số khách
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@totalCustomers</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Khách tháng này
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@customersThisMonth</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calendar fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Tour đã đặt
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@totalBookings</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-bag-check fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Doanh thu
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(totalRevenue.ToString("N0")) VND</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-currency-dollar fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-gradient-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">
                    <i class="bi bi-list me-2"></i>Danh Sách Khách Hàng
                </h6>
            </div>
        </div>
        
        <div class="card-body p-4">
            <!-- Search and Filter Section -->
            <div class="row mb-4">
                <div class="col-md-6 mb-2 mb-md-0">
                    <div class="d-flex align-items-center">
                        <label for="entriesPerPage" class="me-2 mb-0 text-muted">
                            <i class="bi bi-list-ol me-1"></i>Hiển thị:
                        </label>
                        <select id="entriesPerPage" class="form-select form-select-sm shadow-sm" style="width: auto;">
                            <option value="25" selected>25</option>
                            <option value="50">50</option>
                            <option value="75">75</option>
                            <option value="100">100</option>
                        </select>
                        <span class="ms-2 text-muted">khách hàng</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0" 
                               placeholder="Tìm kiếm theo tên, email, số điện thoại..." aria-label="Search">
                    </div>
                </div>
            </div>

            <!-- Customers Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="customersTable">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">
                                <i class="bi bi-person text-primary me-1"></i>Khách hàng
                            </th>
                            <th class="border-0">
                                <i class="bi bi-envelope text-info me-1"></i>Email
                            </th>
                            <th class="border-0">
                                <i class="bi bi-telephone text-success me-1"></i>Số điện thoại
                            </th>
                            <th class="border-0">
                                <i class="bi bi-geo-alt text-danger me-1"></i>Địa chỉ
                            </th>
                            <th class="border-0">
                                <i class="bi bi-calendar text-warning me-1"></i>Ngày đăng ký
                            </th>
                            <th class="border-0 text-center">
                                <i class="bi bi-bag-check text-primary me-1"></i>Tour đã đặt
                            </th>
                            <th class="border-0">
                                <i class="bi bi-currency-dollar text-success me-1"></i>Tổng chi tiêu
                            </th>
                            <th class="border-0 text-center" style="width: 200px;">
                                <i class="bi bi-gear me-1"></i>Hành động
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var customer in Model)
                            {
                                <tr class="customer-row" data-customer-id="@customer.UserID">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-primary text-white me-2">
                                                @customer.CustomerInitials
                                            </div>
                                            <div>
                                                <div class="d-flex align-items-center gap-2">
                                                    <strong class="text-dark">@customer.FullName</strong>
                                                    @if (customer.IsBanned)
                                                    {
                                                        <span class="badge bg-danger-soft text-danger px-2 py-1">
                                                            <i class="bi bi-ban"></i> Đã cấm
                                                        </span>
                                                    }
                                                </div>
                                                <small class="text-muted">@customer.Username</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@customer.Email</td>
                                    <td>@(customer.Phone ?? "N/A")</td>
                                    <td>
                                        <small class="text-muted">
                                            @if (!string.IsNullOrEmpty(customer.Address))
                                            {
                                                @(customer.Address.Length > 30 ? customer.Address.Substring(0, 30) + "..." : customer.Address)
                                            }
                                            else
                                            {
                                                <text>N/A</text>
                                            }
                                        </small>
                                    </td>
                                    <td>
                                        <i class="bi bi-calendar-event text-muted me-1"></i>
                                        @customer.FormattedCreatedAt
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info-soft text-info px-3 py-2">
                                            @customer.TotalBookings
                                        </span>
                                    </td>
                                    <td>
                                        <strong class="text-success">@customer.FormattedTotalSpent</strong>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex gap-1 justify-content-center">
                                            @if (!customer.IsBanned)
                                            {
                                                <a asp-action="CustomerDetails" asp-route-id="@customer.UserID" 
                                                   class="btn btn-sm btn-primary shadow-sm" title="Xem chi tiết">
                                                    <i class="bi bi-eye me-1"></i>Xem
                                                </a>
                                            }
                                            @if (customer.IsBanned)
                                            {
                                                <button type="button" class="btn btn-sm btn-success unban-customer-btn" 
                                                        data-customer-id="@customer.UserID" data-customer-name="@customer.FullName" title="Bỏ cấm">
                                                    <i class="bi bi-unlock me-1"></i>Bỏ cấm
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-danger ban-customer-btn" 
                                                        data-customer-id="@customer.UserID" data-customer-name="@customer.FullName" title="Cấm">
                                                    <i class="bi bi-ban me-1"></i>Cấm
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <i class="bi bi-inbox fs-1 text-muted mb-3 d-block"></i>
                                    <p class="text-muted mb-0">Không có khách hàng nào trong hệ thống</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

