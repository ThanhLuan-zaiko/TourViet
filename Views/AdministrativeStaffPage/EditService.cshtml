@{
    ViewData["Title"] = "Chỉnh sửa Dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TourViet.Models.Service

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-1 text-gray-800">
                <i class="fas fa-edit text-primary me-2"></i>Chỉnh sửa Dịch vụ
            </h1>
            <p class="text-muted mb-0">
                <small>Cập nhật thông tin chi tiết cho dịch vụ</small>
            </p>
        </div>
        <a asp-action="ManageServices" asp-controller="Admin" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>

    <form asp-action="EditService" asp-controller="Admin" method="post">
        <input type="hidden" asp-for="ServiceID" />
        <input type="hidden" asp-for="CreatedAt" />
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Lỗi!</strong> Vui lòng kiểm tra lại các thông tin bên dưới.
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <!-- Left Column - Main Information -->
            <div class="col-lg-8">
                <!-- Basic Information Card -->
                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-header bg-gradient-primary text-white py-3">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-info-circle me-2"></i>Thông Tin Cơ Bản
                        </h6>
                    </div>
                    <div class="card-body p-4">
                        <!-- Service Name -->
                        <div class="mb-4">
                            <label asp-for="ServiceName" class="form-label fw-bold">
                                <i class="fas fa-tag text-primary me-2"></i>Tên Dịch vụ
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-concierge-bell text-muted"></i>
                                </span>
                                <input asp-for="ServiceName" 
                                       class="form-control border-start-0 ps-0" 
                                       placeholder="Ví dụ: Hướng dẫn viên tiếng Anh" />
                            </div>
                            <span asp-validation-for="ServiceName" class="text-danger small"></span>
                        </div>

                        <!-- Service Code -->
                        <div class="mb-4">
                            <label asp-for="Code" class="form-label fw-bold">
                                <i class="fas fa-barcode text-info me-2"></i>Mã Dịch vụ
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-hashtag text-muted"></i>
                                </span>
                                <input asp-for="Code" 
                                       class="form-control border-start-0 ps-0" 
                                       placeholder="Ví dụ: SVC-001" />
                            </div>
                            <small class="text-muted">Mã định danh duy nhất cho dịch vụ (không bắt buộc)</small>
                            <span asp-validation-for="Code" class="text-danger small d-block"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-0">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left text-success me-2"></i>Mô tả chi tiết
                            </label>
                            <textarea asp-for="Description" 
                                      class="form-control" 
                                      rows="6" 
                                      placeholder="Nhập mô tả chi tiết về dịch vụ, bao gồm những gì được cung cấp..."></textarea>
                            <div class="form-text">
                                <i class="fas fa-lightbulb text-warning me-1"></i>
                                Mô tả rõ ràng sẽ giúp khách hàng hiểu rõ hơn về dịch vụ
                            </div>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Pricing & Settings -->
            <div class="col-lg-4">
                <!-- Pricing Card -->
                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-header bg-gradient-success text-white py-3">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-dollar-sign me-2"></i>Giá & Tiền Tệ
                        </h6>
                    </div>
                    <div class="card-body p-4">
                        <!-- Price -->
                        <div class="mb-4">
                            <label asp-for="Price" class="form-label fw-bold">
                                <i class="fas fa-money-bill-wave text-success me-2"></i>Giá
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-dollar-sign text-muted"></i>
                                </span>
                                <input asp-for="Price" 
                                       type="number" 
                                       step="0.01" 
                                       class="form-control" 
                                       placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <!-- Currency -->
                        <div class="mb-0">
                            <label asp-for="Currency" class="form-label fw-bold">
                                <i class="fas fa-coins text-warning me-2"></i>Đơn vị tiền tệ
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-globe text-muted"></i>
                                </span>
                                <select asp-for="Currency" class="form-select">
                                    <option value="VND">VND - Việt Nam Đồng</option>
                                    <option value="USD">USD - US Dollar</option>
                                    <option value="EUR">EUR - Euro</option>
                                    <option value="GBP">GBP - British Pound</option>
                                </select>
                            </div>
                            <span asp-validation-for="Currency" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Service Type Card -->
                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-header bg-gradient-info text-white py-3">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-cog me-2"></i>Loại Dịch Vụ
                        </h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="form-check mb-3 p-3 bg-light rounded">
                            <input class="form-check-input" 
                                   type="radio" 
                                   name="ServiceType" 
                                   id="serviceActive" 
                                   value="active" 
                                   @(Model.IsActive ? "checked" : "") />
                            <label class="form-check-label w-100" for="serviceActive">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check-circle text-success fa-lg me-2"></i>
                                    <div>
                                        <strong>Đang hoạt động</strong>
                                        <small class="d-block text-muted">Dịch vụ đang được cung cấp</small>
                                    </div>
                                </div>
                            </label>
                        </div>

                        <div class="form-check p-3 bg-light rounded">
                            <input class="form-check-input" 
                                   type="radio" 
                                   name="ServiceType" 
                                   id="serviceTaxable" 
                                   value="taxable" 
                                   @(Model.IsTaxable ? "checked" : "") />
                            <label class="form-check-label w-100" for="serviceTaxable">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-receipt text-warning fa-lg me-2"></i>
                                    <div>
                                        <strong>Chịu thuế</strong>
                                        <small class="d-block text-muted">Dịch vụ có áp dụng thuế</small>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Service Info Card -->
                <div class="card shadow-sm border-0 bg-light">
                    <div class="card-body p-3">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-info-circle me-2"></i>Thông tin
                        </h6>
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">
                                    <i class="far fa-calendar me-1"></i>Ngày tạo:
                                </span>
                                <strong>@Model.CreatedAt.ToString("dd/MM/yyyy")</strong>
                            </div>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">
                                        <i class="far fa-clock me-1"></i>Cập nhật:
                                    </span>
                                    <strong>@Model.UpdatedAt.Value.ToString("dd/MM/yyyy")</strong>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="ManageServices" asp-controller="Admin" class="btn btn-lg btn-light">
                                <i class="fas fa-times me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-lg btn-primary px-5">
                                <i class="fas fa-save me-2"></i>Cập nhật Dịch vụ
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .bg-gradient-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }
    
    .bg-gradient-info {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }
    
    .form-control:focus,
    .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .input-group-text {
        border-right: 0;
    }
    
    .input-group .form-control {
        border-left: 0;
    }
    
    .input-group:focus-within .input-group-text {
        border-color: #667eea;
    }
    
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .form-check-input:checked {
        background-color: #667eea;
        border-color: #667eea;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        transition: all 0.3s;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(102, 126, 234, 0.4);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}