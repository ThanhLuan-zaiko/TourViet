@{
    ViewData["Title"] = "Xóa Lịch Trình Tour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TourViet.Models.TourInstance

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4">Xóa Lịch Trình Tour</h1>
            
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Bạn có chắc chắn muốn xóa lịch trình này?</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Tour:</label>
                                <p>@Model.Tour?.TourName</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Ngày bắt đầu:</label>
                                <p>@Model.StartDate.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Ngày kết thúc:</label>
                                <p>@Model.EndDate.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Sức chứa:</label>
                                <p>@Model.Capacity</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Giá cơ bản:</label>
                                <p>@Model.PriceBase.ToString("N2") @Model.Currency</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Trạng thái:</label>
                                <p>@Model.Status</p>
                            </div>
                        </div>
                    
                    <form asp-action="DeleteInstanceConfirmed" method="post">
                        <input type="hidden" asp-for="InstanceID" />
                        <input type="hidden" asp-for="TourID" />
                        <div class="form-group">
                            <input type="submit" value="Xóa" class="btn btn-danger" />
                            <a asp-action="TourInstances" asp-route-tourId="@Model.TourID" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>