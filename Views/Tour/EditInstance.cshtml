@{
    ViewData["Title"] = "Chỉnh sửa Lịch Trình Tour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TourViet.Models.TourInstance

@{
    var guides = ViewBag.Guides as IEnumerable<TourViet.Models.User>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4">Chỉnh sửa Lịch Trình Tour: @Model.Tour?.TourName</h1>
            
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin Lịch Trình</h6>
                </div>
                <div class="card-body">
                    <form asp-action="EditInstance" method="post">
                        <input type="hidden" asp-for="InstanceID" />
                        <input type="hidden" asp-for="TourID" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StartDate" class="control-label">Ngày bắt đầu</label>
                                    <input asp-for="StartDate" class="form-control" type="date" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EndDate" class="control-label">Ngày kết thúc</label>
                                    <input asp-for="EndDate" class="form-control" type="date" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Capacity" class="control-label">Sức chứa</label>
                                    <input asp-for="Capacity" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PriceBase" class="control-label">Giá cơ bản</label>
                                    <input asp-for="PriceBase" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="PriceBase" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Currency" class="control-label">Đơn vị tiền tệ</label>
                            <select asp-for="Currency" class="form-control">
                                <option value="VND">VND (Việt Nam Đồng)</option>
                                <option value="USD">USD (US Dollar)</option>
                                <option value="EUR">EUR (Euro)</option>
                                <option value="GBP">GBP (British Pound)</option>
                            </select>
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Status" class="control-label">Trạng thái</label>
                            <select asp-for="Status" class="form-control">
                                <option value="Open">Mở đặt chỗ</option>
                                <option value="Closed">Đóng đặt chỗ</option>
                                <option value="Cancelled">Đã hủy</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="GuideID" class="control-label">Hướng dẫn viên</label>
                            <select asp-for="GuideID" class="form-control" asp-items="@(guides != null ? new SelectList(guides, "UserID", "FullName") : new SelectList(new List<TourViet.Models.User>(), "UserID", "FullName"))">
                                <option value="">-- Chọn hướng dẫn viên --</option>
                            </select>
                            <span asp-validation-for="GuideID" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            <a asp-action="TourInstances" asp-route-tourId="@Model.TourID" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}