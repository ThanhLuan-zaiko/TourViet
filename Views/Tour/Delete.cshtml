@{
    ViewData["Title"] = "Xóa Tour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TourViet.Models.Tour

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4">Xóa Tour</h1>
            
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Bạn có chắc chắn muốn xóa tour này?</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Tên Tour:</label>
                                <p>@Model.TourName</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Slug:</label>
                                <p>@Model.Slug</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Mô tả ngắn:</label>
                                <p>@Model.ShortDescription</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Địa điểm:</label>
                                <p>@(Model.Location != null ? Model.Location.LocationName : "Chưa có địa điểm")</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Danh mục:</label>
                                <p>@(Model.Category != null ? Model.Category.CategoryName : "Chưa có danh mục")</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Trạng thái:</label>
                                <p>@(Model.IsPublished ? "Đang hoạt động" : "Chưa kích hoạt")</p>
                            </div>
                        </div>
                        </div> <!-- Close the row div -->
                   
                   <form asp-action="DeleteConfirmed" method="post">
                       <input type="hidden" asp-for="TourID" />
                       <div class="form-group">
                           <input type="submit" value="Xóa" class="btn btn-danger" />
                           <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                       </div>
                   </form>
               </div>
           </div>
       </div>
   </div>
</div>