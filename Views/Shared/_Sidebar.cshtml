<!-- Sidebar -->
<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <h4 class="mb-0">Menu</h4>
    </div>
    <ul class="sidebar-menu list-unstyled mb-0">
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-item">
                <i class="bi bi-house-door"></i>
                <span>Trang chủ</span>
            </a>
        </li>
        
        @{
            var userRoles = Context.Session.GetString("Roles")?.Split(',') ?? new string[0];
            var isAdministrativeStaff = userRoles.Contains("AdministrativeStaff");
        }
        
        @if (isAdministrativeStaff)
        {
            <!-- AdministrativeStaff specific menu items -->
            <li>
                <a asp-area="" asp-controller="Home" asp-action="ManageTours" class="sidebar-item">
                    <i class="bi bi-briefcase"></i>
                    <span>Quản lý Tour</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="ManageBookings" class="sidebar-item">
                    <i class="bi bi-calendar-check"></i>
                    <span>Quản lý Đặt Tour</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="TourSchedule" class="sidebar-item">
                    <i class="bi bi-clock-history"></i>
                    <span>Lịch Trình Tour</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="CustomerList" class="sidebar-item">
                    <i class="bi bi-people"></i>
                    <span>Danh Sách Khách Hàng</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Admin" asp-action="ManageServices" class="sidebar-item">
                    <i class="bi bi-gear"></i>
                    <span>Quản lý Dịch vụ</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Promotion" asp-action="Index" class="sidebar-item">
                    <i class="bi bi-percent"></i>
                    <span>Quản lý chương trình khuyến mãi</span>
                </a>
            </li>
        }
        else
        {
            <!-- Customer menu items -->
            <li>
                <a asp-area="" asp-controller="Promotions" asp-action="Index" class="sidebar-item">
                    <i class="bi bi-gift"></i>
                    <span>Khuyến mãi</span>
                    @await Component.InvokeAsync("ActivePromotionCount")
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Trending" class="sidebar-item">
                    <i class="bi bi-fire"></i>
                    <span>Thịnh hành</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Domestic" class="sidebar-item">
                    <i class="bi bi-geo-alt"></i>
                    <span>Du lịch trong nước</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="International" class="sidebar-item">
                    <i class="bi bi-globe"></i>
                    <span>Du lịch nước ngoài</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="BookingHistory" class="sidebar-item">
                    <i class="bi bi-clock-history"></i>
                    <span>Lịch sử đặt tour</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-item">
                    <i class="bi bi-calendar-check"></i>
                    <span>Theo dõi lịch trình</span>
                </a>
            </li>
        }
    </ul>
</div>

<!-- Overlay -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>
